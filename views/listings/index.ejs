<%- layout("layouts/boilerplate") %>


    <body>
        <div class="container mt-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0">All Listings</h3>
                <a href="/listings/new" class="btn btn-danger">
                    <i class="fa-solid fa-plus me-2"></i>Add New Listing
                </a>
            </div>
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
                <% for(let listing of allListings) { %>
                    <div class="col">
                        <a href="/listings/<%= listing._id %>" class="listing-link">
                            <div class="card">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>"
                                    style="height: 20rem;">
                                <div class="card-body">
                                    <p class="card-text mb-0"><strong>
                                            <%= listing.location %>
                                        </strong></p>
                                    <p class="card-text text-muted mb-1">
                                        <%= listing.title %>
                                    </p>
                                    <p class="card-text"><strong>&#8377; <%= listing.price.toLocaleString('en-IN') %>
                                        </strong> / night</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% } %>
            </div>
        </div>
    </body>