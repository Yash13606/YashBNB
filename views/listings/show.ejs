<%- layout("layouts/boilerplate") %>

    <body>
        <div class="container mt-4">
            <div class="row">
                <!-- Image Section -->
                <div class="col-lg-8 mb-4">
                    <div class="show-img-container">
                        <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="show-img">
                    </div>
                </div>

                <!-- Details Section -->
                <div class="col-lg-4">
                    <div class="card show-card">
                        <div class="card-body">
                            <h3 class="listing-title mb-3">
                                <%= listing.title %>
                            </h3>

                            <p class="listing-description mb-4">
                                <%= listing.description %>
                            </p>

                            <div class="listing-details mb-4">
                                <div class="detail-item mb-2">
                                    <i class="fa-solid fa-location-dot me-2"></i>
                                    <strong>
                                        <%= listing.location %>
                                    </strong>
                                </div>
                                <div class="detail-item mb-2">
                                    <i class="fa-solid fa-earth-americas me-2"></i>
                                    <%= listing.country %>
                                </div>
                                <div class="detail-item">
                                    <i class="fa-solid fa-indian-rupee-sign me-2"></i>
                                    <strong>â‚¹ <%= listing.price.toLocaleString('en-IN') %></strong> / night
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-grid gap-2">
                                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">
                                    <i class="fa-solid fa-pen-to-square me-2"></i>Edit Listing
                                </a>
                                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-outline-danger w-100"
                                        onclick="return confirm('Are you sure you want to delete this listing?')">
                                        <i class="fa-solid fa-trash me-2"></i>Delete Listing
                                    </button>
                                </form>
                                <a href="/listings" class="btn btn-outline-secondary">
                                    <i class="fa-solid fa-arrow-left me-2"></i>Back to All Listings
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>