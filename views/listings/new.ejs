<%- layout("layouts/boilerplate") %>

    <body>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <h2 class="mb-4">Create a New Listing</h2>
                    <form action="/listings" method="POST" class="needs-validation" novalidate>
                        <!-- Title -->
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title"
                                placeholder="Add a catchy title" required>
                            <div class="valid-feedback">Title is good</div>
                            <div class="invalid-feedback">Title is required</div>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="4"
                                required></textarea>
                            <div class="valid-feedback">Description is good</div>
                            <div class="invalid-feedback">Description is required</div>
                        </div>

                        <!-- Image Link -->
                        <div class="mb-3">
                            <label for="image" class="form-label">Image Link</label>
                            <input type="url" class="form-control" id="image" name="image"
                                placeholder="Enter Image URL/Link" required>
                            <div class="valid-feedback">Image is good</div>
                            <div class="invalid-feedback">Image is required</div>
                        </div>

                        <!-- Price and Country in same row -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" class="form-control" id="price" name="price" placeholder="1200"
                                    required>
                                    <div class="valid-feedback">Price is good</div>
                                <div class="invalid-feedback">Price is required</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="country" class="form-label">Country</label>
                                <input type="text" class="form-control" id="country" name="country" placeholder="India"
                                    required>
                                <div class="valid-feedback">Country is good</div>
                                <div class="invalid-feedback">Country is required</div>
                            </div>
                        </div>

                        <!-- Location -->
                        <div class="mb-4">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="location" name="location"
                                placeholder="Jaipur, Rajasthan" required>
                                <div class="valid-feedback">Location is good</div>
                                <div class="invalid-feedback">Location is required</div>    
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-dark w-100 py-2 mb-3">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </body>